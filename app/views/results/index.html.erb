<div class="row my-2">
<div class="col-lg-12">
  <h3 class="my-2">Showing <%= @results.count %> results</h3>

  <button type="button" class="btn btn-primary my-2" data-toggle="modal" data-target="#exportModal">
    Export results as .csv
  </button>

  <div class="modal fade" id="exportModal" tabindex="-1" role="dialog" aria-labelledby="exportModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <%= form_tag(export_results_path, method: "post") do %>

          <div class="modal-header">
            <h5 class="modal-title">Export CSV</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>


          <div class="modal-body">
            <div class="form-group">
              <%= label_tag :to_email %>
              <%= text_field_tag :to_email, nil, class: "form-control" %>
            </div>

            <div class="form-row">
              <div class="form-group col-md-6">
                <%= label_tag :from_date, "From", class: "col-2 col-form-label" %>
                <%= date_field(:from_date, value: Date.new(2016, 1, 1), class: "form-control") %>
              </div>
              <div class="form-group col-md-6">
                <label for="inputPassword4">Password</label>
                <%= label_tag :to_date, "To" %>
                <%= date_field(:to_date, value: Date.today, class: "form-control") %>
              </div>
            </div>

            <div class="form-group row">
              <%= label_tag(:q, "Email to:", class: "col-sm-2 col-form-label") %>
              <div class="col-sm-10">
                <%= text_field(:q, :to_email, size: 32, required: true, class: "form-control-plaintext w-100") %>
              </div>
            </div>

          </div>

          <div class="modal-footer">
            <%= submit_tag("Filter and Export Results", class: 'btn btn-primary') %>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <table class="table">
    <thead>
      <th>ID</th>
      <th>Classification</th>
      <th>Created At</td>
      <th>View</th>
    </thead>
    <tbody>
      <% @results.each do |answer_set| %>
        <tr>
          <td><%= answer_set.id %></td>
          <td><%= answer_set.classification.name %></td>
          <td><%= answer_set.created_at.to_formatted_s(:long) %></td>
          <td><%= link_to 'View Results Page', results_path(answer_set.uuid) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
