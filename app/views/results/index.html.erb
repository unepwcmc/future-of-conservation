<div class="row my-2">
<div class="col-lg-12">
  <h3 class="my-2">Showing <%= @results.count %> results</h3>

  <button type="button" class="btn btn-primary my-2" data-toggle="modal" data-target="#exportModal">
    Export results as .csv
  </button>

  <div class="modal fade" id="exportModal" tabindex="-1" role="dialog" aria-labelledby="exportModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <%= form_tag(export_results_path, method: "post", class: "form-inline") do %>
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exportModalLabel">Export CSV</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="form-group my-2">
            <div class="col-md-2">
              <%= label_tag(:q, "Date range:") %>
            </div>
            <div class="col-md-5">
              <%= label_tag(:q, "from: ", class: "form-control-inline") %>
              <%= date_field(:q, :from_date, value: Date.new(2016, 1, 1), class: "form-control-inline") %>
            </div>
            <div class="col-md-5">
              <%= label_tag(:q, "to: ", class: "form-control-inline") %>
              <%= date_field(:q, :to_date, value: Date.today, class: "form-control-inline") %>
            </div>
          </div>
          <div class="form-group my-2">
            <div class="col-md-2">
              <%= label_tag(:q, "Email to:") %>
            </div>
            <div class="col-md-8">
              <%= text_field(:q, :to_email, size: 32, required: true, class: "form-control-inline") %>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <%= submit_tag("Filter and Export Results", class: 'btn btn-primary') %>
        </div>
      </div>
    <% end %>
    </div>
  </div>

  <table class="table">
    <thead>
      <th>ID</th>
      <th>Classification</th>
      <th>Created At</td>
      <th>View</th>
    </thead>
    <tbody>
      <% @results.each do |answer_set| %>
        <tr>
          <td><%= answer_set.id %></td>
          <td><%= answer_set.classification.name %></td>
          <td><%= answer_set.created_at.to_formatted_s(:long) %></td>
          <td><%= link_to 'View Results Page', results_path(answer_set.uuid) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
